// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./bd.sqlite"
}

model Clients {
  clientId   Int       @id @default(autoincrement())
  name       String
  email      String
  phone      Int
  password   String
  address    String
  orders     Order[]
  bookings   Booking[]
}

model Admin {
  adminId    Int     @id @default(autoincrement())
  email      String
  password   String
}

model Dish {
  dishId     Int     @id @default(autoincrement())
  name       String
  description String
  price      Float
  category   String
  orders     OrderDish[]
}

model Table {
  tableNumber Int     @id @default(autoincrement())
  status      String
  bookings    Booking[]
}

model Order {
  orderNumber       Int     @id @default(autoincrement())
  clientId          Int
  totalAmount       Float
  discount          Float   @default(0)
  deliveryAddress   String

  client   Clients       @relation(fields: [clientId], references: [clientId])
  dishes   OrderDish[]
}

model OrderDish {
  orderId Int
  dishId  Int

  order   Order @relation(fields: [orderId], references: [orderNumber])
  dish    Dish  @relation(fields: [dishId], references: [dishId])

  @@id([orderId, dishId])
}

model Booking {
  bookingId     Int      @id @default(autoincrement())
  tableNumber   Int
  clientId      Int
  bookingDate   DateTime

  client Clients @relation(fields: [clientId], references: [clientId])
  table  Table  @relation(fields: [tableNumber], references: [tableNumber])
}
