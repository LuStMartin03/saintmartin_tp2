// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./bd.sqlite"
}

model Clients {
  clientId   Int       @id @default(autoincrement())
  name       String
  email      String
  phone      Int
  password   String
  address    String
  orders     Order[]
  reservation Reservation[]
}

model Admin {
  adminId    Int     @id @default(autoincrement())
  email      String
  password   String
}

model Dish {
  dishId     Int     @id @default(autoincrement())
  name       String
  description String
  price      Float
  category   String
  orders     OrderDish[]
}

model Table {
  tableId     Int     @id @default(autoincrement())
  status      String  @default("disponible")
  reservation Reservation[]
}

model Order {
  orderId           Int     @id @default(autoincrement())
  clientId          Int
  totalAmount       Float
  discount          String
  finalAmount       Float
  status            String  @default("pendiente")
  deliveryAddress   String

  client   Clients       @relation(fields: [clientId], references: [clientId])
  dishes   OrderDish[]
}

model OrderDish {
  orderId Int
  dishId  Int
  qty     Int

  order   Order @relation(fields: [orderId], references: [orderId])
  dish    Dish  @relation(fields: [dishId], references: [dishId])

  @@id([orderId, dishId])
}

model Reservation {
  reservationId       Int     @id @default(autoincrement())  
  tableId       Int
  clientId      Int
  /* bookingDate   DateTime */

  table  Table  @relation(fields: [tableId], references: [tableId])
  client Clients @relation(fields: [clientId], references: [clientId])
}
